<div class="content-body">

    <!-- row -->
    <div class="page-titles">
        <ol class="breadcrumb">
            <li><h5 class="bc-title">Role Management</h5></li>
            <li class="breadcrumb-item">
                <a href="javascript:void(0)">
                    <svg width="17" height="17" viewBox="0 0 17 17" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M2.125 6.375L8.5 1.41667L14.875 6.375V14.1667C14.875 14.5424 14.7257 14.9027 14.4601 15.1684C14.1944 15.4341 13.8341 15.5833 13.4583 15.5833H3.54167C3.16594 15.5833 2.80561 15.4341 2.53993 15.1684C2.27426 14.9027 2.125 14.5424 2.125 14.1667V6.375Z" stroke="#2C2C2C" stroke-linecap="round" stroke-linejoin="round" />
                        <path d="M6.375 15.5833V8.5H10.625V15.5833" stroke="#2C2C2C" stroke-linecap="round" stroke-linejoin="round" />
                    </svg>
                    Home
                </a>
            </li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)">Role Management</a></li>
        </ol>
        <a class="text-primary fs-13" data-bs-toggle="offcanvas" href="#offcanvasExample1" role="button" aria-controls="offcanvasExample1">+ List Roles</a>
    </div>
    <!-- row -->

    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <h4 class="heading mb-0">Add New Role</h4>
            </div>
            <div class="card-body">
                <form method="post">
                    <!-- Role Information -->
                    <h5 class="mb-3">Role Information</h5>
                    <div class="row">
                        <!-- Company User ID -->
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="CompanyUserId" class="text-secondary font-w500">Company User ID</label>
                                <input type="number" name="CompanyUserId" id="CompanyUserId" class="form-control" placeholder="Enter Company User ID">
                            </div>
                        </div>
                        <!-- Company Module ID -->
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="CompanyModuleId" class="text-secondary font-w500">Company Module ID</label>
                                <input type="number" name="CompanyModuleId" id="CompanyModuleId" class="form-control" placeholder="Enter Company Module ID">
                            </div>
                        </div>
                        <!-- Access Level -->
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="AccessLevel" class="text-secondary font-w500">Access Level</label>
                                <select name="AccessLevel" id="AccessLevel" class="form-control">
                                    <option value="Read">Read</option>
                                    <option value="Write">Write</option>
                                    <option value="Admin">Admin</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary mt-3">Confirm</button>
                </form>
            </div>
        </div>
    </div>
</div>
<!--**********************************
    Content body end
***********************************-->
