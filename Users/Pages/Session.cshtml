<div class="content-body">

    <!-- row -->
    <div class="page-titles">
        <ol class="breadcrumb">
            <li><h5 class="bc-title">Session Management</h5></li>
            <li class="breadcrumb-item">
                <a href="javascript:void(0)">
                    <svg width="17" height="17" viewBox="0 0 17 17" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M2.125 6.375L8.5 1.41667L14.875 6.375V14.1667C14.875 14.5424 14.7257 14.9027 14.4601 15.1684C14.1944 15.4341 13.8341 15.5833 13.4583 15.5833H3.54167C3.16594 15.5833 2.80561 15.4341 2.53993 15.1684C2.27426 14.9027 2.125 14.5424 2.125 14.1667V6.375Z" stroke="#2C2C2C" stroke-linecap="round" stroke-linejoin="round" />
                        <path d="M6.375 15.5833V8.5H10.625V15.5833" stroke="#2C2C2C" stroke-linecap="round" stroke-linejoin="round" />
                    </svg>
                    Home
                </a>
            </li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)">Session Management</a></li>
        </ol>
        <a class="text-primary fs-13" data-bs-toggle="offcanvas" href="#offcanvasExample1" role="button" aria-controls="offcanvasExample1">+ List Sessions</a>
    </div>
    <!-- row -->

    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <h4 class="heading mb-0">Add New Session</h4>
            </div>
            <div class="card-body">
                <form method="post">
                    <!-- Session Information -->
                    <h5 class="mb-3">Session Information</h5>
                    <div class="row">
                        <!-- User ID -->
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="UserId" class="text-secondary font-w500">User ID</label>
                                <input type="number" name="UserId" id="UserId" class="form-control" placeholder="Enter User ID">
                            </div>
                        </div>
                        <!-- Company ID -->
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="CompanyId" class="text-secondary font-w500">Company ID</label>
                                <input type="number" name="CompanyId" id="CompanyId" class="form-control" placeholder="Enter Company ID (Optional)">
                            </div>
                        </div>
                        <!-- Token -->
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="Token" class="text-secondary font-w500">Session Token</label>
                                <input type="text" name="Token" id="Token" class="form-control" placeholder="Enter Session Token">
                            </div>
                        </div>
                        <!-- Expiry Date -->
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="ExpiryDate" class="text-secondary font-w500">Expiry Date</label>
                                <input type="datetime-local" name="ExpiryDate" id="ExpiryDate" class="form-control">
                            </div>
                        </div>
                        <!-- Is Active -->
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="IsActive" class="text-secondary font-w500">Is Active</label>
                                <select name="IsActive" id="IsActive" class="form-control">
                                    <option value="true">Yes</option>
                                    <option value="false">No</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary mt-3">Confirm</button>
                </form>
            </div>
        </div>
    </div>
</div>
<!--**********************************
    Content body end
***********************************-->
