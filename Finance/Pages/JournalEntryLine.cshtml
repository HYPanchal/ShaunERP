@page
@model Finance.Pages.JournalEntryLineModel
@{
}

<div class="content-body">
    <div class="page-titles">
        <ol class="breadcrumb">
            <li><h5 class="bc-title">Journal Entry Line Management</h5></li>
        </ol>
    </div>

    <div class="container-fluid">
        <!-- Journal Entry Line Form -->
        <div class="card">
            <div class="card-header">
                <h4 class="heading mb-0">Add New Journal Entry Line</h4>
            </div>
            <div class="card-body">
                <form method="post">
                    <h5>Entry Line Details</h5>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="JournalEntryId" class="text-secondary font-w500">Journal Entry ID</label>
                                <input type="number" name="JournalEntryId" id="JournalEntryId" class="form-control" placeholder="Enter Journal Entry ID">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="AccountId" class="text-secondary font-w500">Account ID</label>
                                <input type="number" name="AccountId" id="AccountId" class="form-control" placeholder="Enter Account ID">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="Debit" class="text-secondary font-w500">Debit Amount</label>
                                <input type="number" step="0.01" name="Debit" id="Debit" class="form-control" placeholder="Enter Debit Amount">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="Credit" class="text-secondary font-w500">Credit Amount</label>
                                <input type="number" step="0.01" name="Credit" id="Credit" class="form-control" placeholder="Enter Credit Amount">
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit Entry Line</button>
                </form>
            </div>
        </div>
    </div>
</div>