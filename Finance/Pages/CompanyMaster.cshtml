<!--**********************************
    Content body start
***********************************-->
<div class="content-body">

    <!-- row -->
    <div class="page-titles">
        <ol class="breadcrumb">
            <li><h5 class="bc-title">Company Master</h5></li>
            <li class="breadcrumb-item">
                <a href="javascript:void(0)">
                    <svg width="17" height="17" viewBox="0 0 17 17" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M2.125 6.375L8.5 1.41667L14.875 6.375V14.1667C14.875 14.5424 14.7257 14.9027 14.4601 15.1684C14.1944 15.4341 13.8341 15.5833 13.4583 15.5833H3.54167C3.16594 15.5833 2.80561 15.4341 2.53993 15.1684C2.27426 14.9027 2.125 14.5424 2.125 14.1667V6.375Z" stroke="#2C2C2C" stroke-linecap="round" stroke-linejoin="round" />
                        <path d="M6.375 15.5833V8.5H10.625V15.5833" stroke="#2C2C2C" stroke-linecap="round" stroke-linejoin="round" />
                    </svg>
                    Home
                </a>
            </li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)">Company Master</a></li>
        </ol>
        <a class="text-primary fs-13" data-bs-toggle="offcanvas" href="#offcanvasExample1" role="button" aria-controls="offcanvasExample1">+ List Companies</a>
    </div>
    <!-- row -->

    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <h4 class="heading mb-0">Add New Company</h4>
            </div>
            <div class="card-body">
                <form method="post">
                    <!-- Basic Company Information -->
                    <h5 class="mb-3">Basic Company Information</h5>
                    <div class="row">
                        <!-- Company Name -->
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="Name" class="text-secondary font-w500">Company Name</label>
                                <input type="text" name="Name" id="Name" class="form-control" placeholder="Enter Company Name">
                            </div>
                        </div>
                        <!-- Legal Name -->
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="LegalName" class="text-secondary font-w500">Legal Name</label>
                                <input type="text" name="LegalName" id="LegalName" class="form-control" placeholder="Enter Legal Name">
                            </div>
                        </div>
                        <!-- Tax ID -->
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="TaxId" class="text-secondary font-w500">Tax ID (GST/VAT/TIN)</label>
                                <input type="text" name="TaxId" id="TaxId" class="form-control" placeholder="Enter Tax ID">
                            </div>
                        </div>
                        <!-- Address -->
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="Address" class="text-secondary font-w500">Address</label>
                                <input type="text" name="Address" id="Address" class="form-control" placeholder="Enter Address">
                            </div>
                        </div>
                        <!-- Contact Number -->
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="ContactNumber" class="text-secondary font-w500">Contact Number</label>
                                <input type="text" name="ContactNumber" id="ContactNumber" class="form-control" placeholder="Enter Contact Number">
                            </div>
                        </div>
                        <!-- Email -->
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="Email" class="text-secondary font-w500">Email</label>
                                <input type="email" name="Email" id="Email" class="form-control" placeholder="Enter Email">
                            </div>
                        </div>
                    </div>

                    <!-- Financial Details -->
                    <h5 class="mb-3">Financial Details</h5>
                    <div class="row">
                        <!-- Currency -->
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="Currency" class="text-secondary font-w500">Currency</label>
                                <input type="text" name="Currency" id="Currency" class="form-control" placeholder="Enter Currency (e.g., USD, INR, EUR)">
                            </div>
                        </div>
                        <!-- Balance -->
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="Balance" class="text-secondary font-w500">Balance</label>
                                <input type="number" name="Balance" id="Balance" class="form-control" placeholder="Enter Balance">
                            </div>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary mt-3">Save Company</button>
                </form>
            </div>
        </div>
    </div>
</div>
<!--**********************************
    Content body end
***********************************-->
