@page
@model Finance.Pages.VendorModel
@{

}

<div class="content-body">
    <div class="page-titles">
        <ol class="breadcrumb">
            <li><h5 class="bc-title">Vendor and Bill Management</h5></li>
        </ol>
    </div>

    <div class="container-fluid">
        <!-- Vendor Form -->
        <div class="card">
            <div class="card-header">
                <h4 class="heading mb-0">Add New Vendor</h4>
            </div>
            <div class="card-body">
                <form method="post">
                    <h5>Vendor Information</h5>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="CompanyMasterId" class="text-secondary font-w500">Company ID</label>
                                <input type="number" name="CompanyMasterId" id="CompanyMasterId" class="form-control" placeholder="Enter Company ID">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="Name" class="text-secondary font-w500">Vendor Name</label>
                                <input type="text" name="Name" id="Name" class="form-control" placeholder="Enter Vendor Name">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="Email" class="text-secondary font-w500">Email</label>
                                <input type="email" name="Email" id="Email" class="form-control" placeholder="Enter Email">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="Phone" class="text-secondary font-w500">Phone</label>
                                <input type="text" name="Phone" id="Phone" class="form-control" placeholder="Enter Phone Number">
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit Vendor</button>
                </form>
            </div>
        </div>

       </div>
</div>

