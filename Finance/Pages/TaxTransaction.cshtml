@page
@model Finance.Pages.TaxTransactionModel
@{
}

<div class="content-body">
    <div class="page-titles">
        <ol class="breadcrumb">
            <li><h5 class="bc-title">Tax Transaction Management</h5></li>
        </ol>
    </div>

    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <h4 class="heading mb-0">Add New Tax Transaction</h4>
            </div>
            <div class="card-body">
                <form method="post">
                    <h5>Tax Transaction Details</h5>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="CompanyMasterId" class="text-secondary font-w500">Company ID</label>
                                <input type="number" name="CompanyMasterId" id="CompanyMasterId" class="form-control" placeholder="Enter Company ID">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="TaxRateId" class="text-secondary font-w500">Tax Rate ID</label>
                                <input type="number" name="TaxRateId" id="TaxRateId" class="form-control" placeholder="Enter Tax Rate ID">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="InvoiceId" class="text-secondary font-w500">Invoice ID</label>
                                <input type="number" name="InvoiceId" id="InvoiceId" class="form-control" placeholder="Enter Invoice ID">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="TaxAmount" class="text-secondary font-w500">Tax Amount</label>
                                <input type="number" step="0.01" name="TaxAmount" id="TaxAmount" class="form-control" placeholder="Enter Tax Amount">
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit Tax Transaction</button>
                </form>
            </div>
        </div>
    </div>
</div>