@page
@model Finance.Pages.AccountModel
@{
}

<div class="content-body">
    <div class="page-titles">
        <ol class="breadcrumb">
            <li><h5 class="bc-title">Account and Journal Management</h5></li>
        </ol>
    </div>

    <div class="container-fluid">
        <!-- Account Form -->
        <div class="card">
            <div class="card-header">
                <h4 class="heading mb-0">Add New Account</h4>
            </div>
            <div class="card-body">
                <form method="post">
                    <h5>Account Information</h5>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="CompanyMasterId" class="text-secondary font-w500">Company ID</label>
                                <input type="number" name="CompanyMasterId" id="CompanyMasterId" class="form-control" placeholder="Enter Company ID">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="Name" class="text-secondary font-w500">Account Name</label>
                                <input type="text" name="Name" id="Name" class="form-control" placeholder="Enter Account Name">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="AccountNumber" class="text-secondary font-w500">Account Number</label>
                                <input type="text" name="AccountNumber" id="AccountNumber" class="form-control" placeholder="Enter Account Number">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="Type" class="text-secondary font-w500">Account Type</label>
                                <select name="Type" id="Type" class="form-control">
                                    <option value="Asset">Asset</option>
                                    <option value="Liability">Liability</option>
                                    <option value="Revenue">Revenue</option>
                                    <option value="Expense">Expense</option>
                                    <option value="Equity">Equity</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group mb-3">
                                <label for="Balance" class="text-secondary font-w500">Balance</label>
                                <input type="number" step="0.01" name="Balance" id="Balance" class="form-control" placeholder="Enter Account Balance">
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit Account</button>
                </form>
            </div>
        </div>

       

        </div>
        </div>
