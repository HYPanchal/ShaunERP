@page
@model Finance.Pages.JournalEntryModel
@{
}

<div class="content-body">
    <div class="page-titles">
        <ol class="breadcrumb">
            <li><h5 class="bc-title">Journal Entry Management</h5></li>
        </ol>
    </div>

    <div class="container-fluid">
        <!-- Journal Entry Form -->
        <div class="card">
            <div class="card-header">
                <h4 class="heading mb-0">Add New Journal Entry</h4>
            </div>
            <div class="card-body">
                <form method="post">
                    <h5>Journal Entry Information</h5>
                    <div class="row">
                        <!-- Company ID -->
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="CompanyMasterId" class="text-secondary font-w500">Company ID</label>
                                <input type="number" name="CompanyMasterId" id="CompanyMasterId" class="form-control" placeholder="Enter Company ID">
                            </div>
                        </div>
                        <!-- Entry Date -->
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="EntryDate" class="text-secondary font-w500">Entry Date</label>
                                <input type="date" name="EntryDate" id="EntryDate" class="form-control">
                            </div>
                        </div>
                        <!-- Reference -->
                        <div class="col-md-12">
                            <div class="form-group mb-3">
                                <label for="Reference" class="text-secondary font-w500">Reference</label>
                                <input type="text" name="Reference" id="Reference" class="form-control" placeholder="Enter Reference">
                            </div>
                        </div>
                    </div>

                    <h5>Journal Entry Lines</h5>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="AccountId" class="text-secondary font-w500">Account ID</label>
                                <input type="number" name="AccountId" id="AccountId" class="form-control" placeholder="Enter Account ID">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="Debit" class="text-secondary font-w500">Debit</label>
                                <input type="number" step="0.01" name="Debit" id="Debit" class="form-control" placeholder="Enter Debit Amount">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="Credit" class="text-secondary font-w500">Credit</label>
                                <input type="number" step="0.01" name="Credit" id="Credit" class="form-control" placeholder="Enter Credit Amount">
                            </div>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary">Submit Journal Entry</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Content body end -->