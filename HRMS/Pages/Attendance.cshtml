@page
@model HRMS.Pages.AttendanceModel
@{
}
<!--**********************************
    Content body start
***********************************-->
<div class="content-body">
    <div class="page-titles">
        <ol class="breadcrumb">
            <li><h5 class="bc-title">Attendance</h5></li>
            <li class="breadcrumb-item"><a href="javascript:void(0)">Home</a></li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)">Attendance</a></li>
        </ol>
        <a class="text-primary fs-13" data-bs-toggle="offcanvas" href="#offcanvasExample1" role="button" aria-controls="offcanvasExample1">+ List Attendance</a>
    </div>

    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <h4 class="heading mb-0">Add New Attendance Record</h4>
            </div>
            <div class="card-body">
                <form method="post">
                    <h5 class="mb-3">Attendance Details</h5>
                    <div class="row">
                        <!-- Employee ID -->
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="EmployeeId" class="text-secondary font-w500">Employee ID</label>
                                <input type="number" name="EmployeeId" id="EmployeeId" class="form-control" placeholder="Enter Employee ID">
                            </div>
                        </div>
                        <!-- Date -->
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="Date" class="text-secondary font-w500">Date</label>
                                <input type="date" name="Date" id="Date" class="form-control">
                            </div>
                        </div>
                        <!-- Check-In -->
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="CheckIn" class="text-secondary font-w500">Check-In Time</label>
                                <input type="time" name="CheckIn" id="CheckIn" class="form-control">
                            </div>
                        </div>
                        <!-- Check-Out -->
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="CheckOut" class="text-secondary font-w500">Check-Out Time</label>
                                <input type="time" name="CheckOut" id="CheckOut" class="form-control">
                            </div>
                        </div>
                        <!-- Is Absent -->
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label class="text-secondary font-w500">Is Absent?</label>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="IsAbsent" id="IsAbsent">
                                    <label class="form-check-label" for="IsAbsent">
                                        Mark as Absent
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary mt-3">Confirm</button>
                </form>
            </div>
        </div>
    </div>
</div>
<!--**********************************
    Content body end
***********************************-->
