}
<!--**********************************
    Content body start
***********************************-->
<div class="content-body">

    <!-- row -->
    <div class="page-titles">
        <ol class="breadcrumb">
            <li><h5 class="bc-title">Task</h5></li>
            <li class="breadcrumb-item">
                <a href="javascript:void(0)">
                    <svg width="17" height="17" viewBox="0 0 17 17" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M2.125 6.375L8.5 1.41667L14.875 6.375V14.1667C14.875 14.5424 14.7257 14.9027 14.4601 15.1684C14.1944 15.4341 13.8341 15.5833 13.4583 15.5833H3.54167C3.16594 15.5833 2.80561 15.4341 2.53993 15.1684C2.27426 14.9027 2.125 14.5424 2.125 14.1667V6.375Z" stroke="#2C2C2C" stroke-linecap="round" stroke-linejoin="round" />
                        <path d="M6.375 15.5833V8.5H10.625V15.5833" stroke="#2C2C2C" stroke-linecap="round" stroke-linejoin="round" />
                    </svg>
                    Home
                </a>
            </li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)">Task</a></li>
        </ol>
        <a class="text-primary fs-13" data-bs-toggle="offcanvas" href="#offcanvasExample1" role="button" aria-controls="offcanvasExample1">+ List Tasks</a>
    </div>
    <!-- row -->

    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <h4 class="heading mb-0">Add New Task</h4>
            </div>
            <div class="card-body">
                <form method="post">
                    <div class="row">
                        <!-- Task Owner -->
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="TaskOwner" class="text-secondary font-w500">Task Owner</label>
                                <input type="text" name="TaskOwner" id="TaskOwner" class="form-control" placeholder="Enter Task Owner">
                            </div>
                        </div>
                        <!-- Subject -->
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="Subject" class="text-secondary font-w500">Subject</label>
                                <input type="text" name="Subject" id="Subject" class="form-control" placeholder="Enter Subject">
                            </div>
                        </div>
                        <!-- Due Date -->
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="DueDate" class="text-secondary font-w500">Due Date</label>
                                <input type="date" name="DueDate" id="DueDate" class="form-control" placeholder="Enter Due Date">
                            </div>
                        </div>
                        <!-- Task To -->
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="TaskTo" class="text-secondary font-w500">Task To</label>
                                <input type="text" name="TaskTo" id="TaskTo" class="form-control" placeholder="Enter Task To">
                            </div>
                        </div>
                        <!-- Task Type -->
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="TaskType" class="text-secondary font-w500">Task Type</label>
                                <input type="text" name="TaskType" id="TaskType" class="form-control" placeholder="Enter Task Type">
                            </div>
                        </div>
                        <!-- Priority -->
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="Priority" class="text-secondary font-w500">Priority</label>
                                <input type="text" name="Priority" id="Priority" class="form-control" placeholder="Enter Priority">
                            </div>
                        </div>
                        <!-- Reminder -->
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="Reminder" class="text-secondary font-w500">Reminder</label>
                                <input type="text" name="Reminder" id="Reminder" class="form-control" placeholder="Enter Reminder">
                            </div>
                        </div>
                        <!-- Repeat -->
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="Repeat" class="text-secondary font-w500">Repeat</label>
                                <input type="text" name="Repeat" id="Repeat" class="form-control" placeholder="Enter Repeat">
                            </div>
                        </div>
                        <!-- Description -->
                        <div class="col-md-12">
                            <div class="form-group mb-3">
                                <label for="Description" class="text-secondary font-w500">Description</label>
                                <textarea name="Description" id="Description" class="form-control" placeholder="Enter Description"></textarea>
                            </div>
                        </div>
                        <!-- Task Status -->
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="Status" class="text-secondary font-w500">Task Status</label>
                                <select name="Status" id="Status" class="form-control">
                                    <option value="">Select Status</option>
                                    <option value="NotStarted">Not Started</option>
                                    <option value="InProgress">In Progress</option>
                                    <option value="Completed">Completed</option>
                                    <option value="Deferred">Deferred</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary mt-3">Confirm</button>
                </form>
            </div>
        </div>
    </div>
</div>
<!--**********************************
    Content body end
***********************************-->
